<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <ImageView
        android:id="@+id/iv_layout_sport_type"
        android:src="@drawable/stone_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"></ImageView>

    <TextView
        android:id="@+id/tv_layout_sport_name"
        android:text="跑步"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_layout_sport_type"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_layout_sport_energy"
        android:text="123"
        android:textColor="#EC1E1E"
        android:layout_below="@id/tv_layout_sport_name"
        android:layout_toRightOf="@id/iv_layout_sport_type"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_below="@id/tv_layout_sport_name"
        android:layout_toRightOf="@id/tv_layout_sport_energy"
        android:layout_marginLeft="3dp"
        android:text="千卡/60分钟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_sport_add_id"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

</RelativeLayout>
