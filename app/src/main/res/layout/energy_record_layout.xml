<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_energy_type"
        android:src="@drawable/stone_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"></ImageView>

    <TextView
        android:id="@+id/tv_energy_name"
        android:text="米饭"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_energy_type"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_food_number"
        android:text="123"
        android:layout_below="@id/tv_energy_name"
        android:layout_toRightOf="@id/iv_energy_type"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_energy_txt"
        android:layout_below="@id/tv_energy_name"
        android:layout_toRightOf="@id/tv_food_number"
        android:layout_marginLeft="3dp"
        android:text="份"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/iv_energy_info"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_right_grey"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"></ImageView>

    <TextView
        android:id="@+id/tv_energy_record_txt"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_energy_info"
        android:text="千卡"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_energy_number"
        android:text="123"
        android:layout_toLeftOf="@id/tv_energy_record_txt"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_energy_record_id"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

</RelativeLayout>
