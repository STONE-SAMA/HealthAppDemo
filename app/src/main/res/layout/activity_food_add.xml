<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FoodAddActivity"
    android:id="@+id/cl_layout_food_add">

    <com.example.healthappdemo.UI.FoodAddTopBar
        android:id="@+id/food_add_topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" >

    </com.example.healthappdemo.UI.FoodAddTopBar>

    <SearchView
        android:id="@+id/sv_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:queryBackground="@null"
        android:queryHint="请输入食物名称"
        app:layout_constraintTop_toBottomOf="@+id/food_add_topBar"
        tools:layout_editor_absoluteX="10dp" />

    <ListView
        android:id="@+id/lv_food_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_food" >

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>